<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Get CRUD</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

        <!-- Popper JS -->
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        button {
            display: block;
        }
    </style>

    <body>
        <table style="width: 100%;">
            <tr>
                <th>email</th>
                <th>firstName</th>
                <th>lastName</th>
                <th>address</th>
                <th>action</th>
            </tr>
            <tr>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            <% for(var i=0; i < Data.length; i++) { %>
                <tr>
                    <td>
                        <%= Data[i].email %>
                    </td>
                    <td>
                        <%= Data[i].firstName %>
                    </td>
                    <td>
                        <%= Data[i].lastName %>
                    </td>
                    <td>
                        <%= Data[i].address %>
                    </td>
                    <td>
                        <form action="/Edit-user/<%= Data[i].id %>" method="GET">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/delete-user/<%= Data[i].id %>" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>

                <% } %>
        </table>
        <div>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item" id="n1"><a class="page-link" href="#">1</a></li>
                    <li class="page-item" id="n1"><a class="page-link" href="#">2</a></li>
                    <li class="page-item" id="n1"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>

        </div>

    </body>

</html>